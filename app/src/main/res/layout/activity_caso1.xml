<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Caso1Activity"
    android:orientation="vertical"
    android:background="@drawable/fond3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/caso1"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"/>

    <!-- SeekBar para Velocidad Inicial -->
    <TextView
        android:id="@+id/textVelocidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Velocidad inicial: 0 m/s"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:textStyle="bold"/>

    <SeekBar
        android:id="@+id/seekBarVelocidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"/>

    <!-- SeekBar para Ángulo -->
    <TextView
        android:id="@+id/textAngulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ángulo: 0 grados"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:textStyle="bold"/>

    <SeekBar
        android:id="@+id/seekBarAngulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="90" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular Movimiento"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/pink"/>

    <Button
        android:id="@+id/btnSimular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simular Movimiento"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/pink"/>

    <TextView
        android:id="@+id/outputResultados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resultados"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <com.lisbeth.proyectofinal.ParabolicoView
        android:id="@+id/parabolicoView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"/>

</LinearLayout>