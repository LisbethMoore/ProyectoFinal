<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/fond2">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lista de Datos Guardados"
        android:textSize="24sp"
        android:textColor="@color/titleColor"
        android:gravity="center"
        android:padding="8dp"
        android:fontFamily="sans-serif-medium" />

    <!-- Descripción -->
    <TextView
        android:id="@+id/tvDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aquí puedes ver los datos calculados y guardados."
        android:textSize="16sp"
        android:textColor="@color/descriptionColor"
        android:gravity="center"
        android:padding="8dp"
        android:fontFamily="sans-serif" />

    <!-- Divisor decorativo -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dividerColor"
        android:layout_marginVertical="8dp" />

    <!-- ListView para los datos -->
    <ListView
        android:id="@+id/listViewDatos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@color/dividerColor"
        android:dividerHeight="1dp"
        android:background="@color/listBackgroundColor"
        android:padding="8dp" />


</LinearLayout>